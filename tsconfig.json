{
  "compilerOptions": {
    "esModuleInterop": true,
    "rootDir": "src",
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react",
    "module": "ESNext",
    "sourceMap": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  },
  "include": ["src/**/*.tsx", "src/**/*.ts"],
  "exclude": [
    "dist",
    "node_modules",
    "example",
    "src/**/*.test.tsx",
    "src/**/*.stories.tsx"
  ]
}
